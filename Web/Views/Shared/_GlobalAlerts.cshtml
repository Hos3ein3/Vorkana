@if (TempData["GlobalError"] != null)
{
    <div class="alert alert-danger">@TempData["GlobalError"]</div>
}
@if (TempData["GlobalSuccess"] != null)
{
    <div class="alert alert-success">@TempData["GlobalSuccess"]</div>
}
@if (TempData["GlobalWarning"] != null)
{
    <div class="alert alert-warning">@TempData["GlobalWarning"]</div>
}
@if (TempData["GlobalInfo"] != null)
{
    <div class="alert alert-info">@TempData["GlobalInfo"]</div>
}
